<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Foto Produk -->
    <ImageView
        android:id="@+id/imageViewProduk"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:orientation="horizontal">

        <!-- Nama Produk -->
        <TextView
            android:id="@+id/textViewNamaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingRight="150dp"
            android:textColor="#000000" />

        <!-- Harga Produk -->
        <TextView
            android:id="@+id/textViewHargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Produk"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF0000" />
    </LinearLayout>



    <!-- Text "Detail Produk" -->
    <TextView
        android:id="@+id/textViewDetailProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Produk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp" />

    <!-- Merk Produk -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewMerkProdukV"
            android:layout_width="wrap_content"
            android:paddingRight="30dp"
            android:layout_height="wrap_content"
            android:text="Merk Produk: " />

        <TextView
            android:id="@+id/textViewMerkProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Merk Produk" />

    </LinearLayout>

    <!-- Kode Produk -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewKodeProdukV"
            android:layout_width="wrap_content"
            android:paddingRight="31dp"
            android:layout_height="wrap_content"
            android:text="Kode Produk: " />

        <TextView
            android:id="@+id/textViewKodeProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Produk" />

    </LinearLayout>

