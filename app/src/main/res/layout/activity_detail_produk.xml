<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Foto Produk -->
            <ImageView
                android:id="@+id/imageViewProduk"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:orientation="horizontal">

                <!-- Nama Produk -->
                <TextView
                    android:id="@+id/textViewNamaProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingRight="150dp"
                    android:text="Nama Produk"
                    android:textColor="@color/abu"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Harga Produk -->
                <TextView
                    android:id="@+id/textViewHargaProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Harga Produk"
                    android:textAlignment="textEnd"
                    android:textColor="@color/oren"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>



            <!-- Text "Detail Produk" -->
            <TextView
                android:id="@+id/textViewDetailProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Detail Produk"
                android:textColor="@color/abu"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Merk Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewMerkProdukV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingRight="33dp"
                    android:text="Merk Produk: "
                    android:textColor="@color/abu" />

                <TextView
                    android:id="@+id/textViewMerkProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Nama Merk Produk"
                    android:textColor="@color/abu" />

            </LinearLayout>

            <!-- Kode Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewKodeProdukV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingRight="31dp"
                    android:text="Kode Produk: "
                    android:textColor="@color/abu" />

                <TextView
                    android:id="@+id/textViewKodeProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Kode Produk"
                    android:textColor="@color/abu" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewSatuanProdukV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingRight="16dp"
                    android:text="Satuan Produk: "
                    android:textColor="@color/abu" />

                <TextView
                    android:id="@+id/textViewSatuanProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Satuan Produk"
                    android:textColor="@color/abu" />

            </LinearLayout>

            <!-- Stok Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewStokProdukV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingRight="33dp"
                    android:text="Stok Produk: "
                    android:textColor="@color/abu" />

                <TextView
                    android:id="@+id/textViewStokProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Stok Produk"
                    android:textColor="@color/abu" />

            </LinearLayout>

            <!-- Kategori Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewKategoriProdukV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingRight="8dp"
                    android:text="Kategori Produk: "
                    android:textColor="@color/abu" />

                <TextView
                    android:id="@+id/textViewKategoriProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Kategori Produk"
                    android:textColor="@color/abu" />

            </LinearLayout>

            <!-- Ukuran Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewUkuranProdukV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingRight="19dp"
                    android:text="Ukuran Produk: "
                    android:textColor="@color/abu" />

                <TextView
                    android:id="@+id/textViewUkuranProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukuran Produk"
                    android:textColor="@color/abu"
                    android:fontFamily="@font/poppins" />

            </LinearLayout>

            <!-- Deskripsi Produk -->
            <TextView
                android:id="@+id/textViewDeskripsiProdukV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:text="Deskripsi Produk: "
                android:textColor="@color/abu"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDeskripsiProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Deskripsi Produk"
                android:textColor="@color/abu" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_gravity="bottom">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnDiterima"
                android:layout_width="304dp"
                android:layout_height="54dp"
                android:text="@string/diterima"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.384"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="TextView"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSending"
                android:layout_width="149dp"
                android:layout_height="59dp"
                android:layout_marginTop="4dp"
                android:text="@string/sending"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.934"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextJumlahstok"
                android:layout_width="237dp"
                android:layout_height="54dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:hint="Masukkan jumlah:"
                android:inputType="number"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonTambahKeranjang"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.64" />

            <Button
                android:id="@+id/buttonTambahKeranjang"
                android:layout_width="135dp"
                android:layout_height="65dp"
                android:layout_marginEnd="16dp"
                android:text="Tambah ke Keranjang"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/qtyRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/qty"
                android:textAlignment="viewStart"
                android:textColor="@color/abu"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/btnSending"
                app:layout_constraintEnd_toStartOf="@+id/btnSending"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btnSending"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/cekoutRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/tgl_cekout"
                android:textAlignment="viewStart"
                android:textColor="@color/abu"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSending"
                app:layout_constraintHorizontal_bias="0.547"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>