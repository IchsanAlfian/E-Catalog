    <!-- Satuan Produk -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSatuanProdukV"
            android:layout_width="wrap_content"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:text="Satuan Produk: " />

        <TextView
            android:id="@+id/textViewSatuanProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satuan Produk" />

    </LinearLayout>

    <!-- Stok Produk -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewStokProdukV"
            android:layout_width="wrap_content"
            android:paddingRight="35dp"
            android:layout_height="wrap_content"
            android:text="Stok Produk: " />

        <TextView
            android:id="@+id/textViewStokProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stok Produk" />

    </LinearLayout>

    <!-- Kategori Produk -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewKategoriProdukV"
            android:layout_width="wrap_content"
            android:paddingRight="11dp"
            android:layout_height="wrap_content"
            android:text="Kategori Produk: " />

        <TextView
            android:id="@+id/textViewKategoriProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Produk" />

    </LinearLayout>

    <!-- Ukuran Produk -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewUkuranProdukV"
            android:layout_width="wrap_content"
            android:paddingRight="20dp"
            android:layout_height="wrap_content"
            android:text="Ukuran Produk: " />

        <TextView
            android:id="@+id/textViewUkuranProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ukuran Produk" />

    </LinearLayout>

    <!-- Deskripsi Produk -->
    <TextView
        android:id="@+id/textViewDeskripsiProdukV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Produk: "
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textViewDeskripsiProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Produk" />

</LinearLayout>
